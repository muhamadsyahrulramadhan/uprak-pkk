<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#26408D">
        <ImageView
            android:id="@+id/imagejudul"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/sun"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/judul1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Wheater Apps"
            android:textSize="30dp"
            android:textColor="#C2B9B9"
            android:layout_marginLeft="100dp"
            android:paddingTop="15dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#2C3CB8">
        <TextView
            android:id="@+id/day"
            android:layout_width="150dp"
            android:layout_height="33dp"
            android:text="Today, April 03"
            android:textSize="22dp"
            android:textColor="#FDE959"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:id="@+id/suhu1"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="26°"
            android:textSize="70dp"
            android:textColor="#FDE959"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/day"/>
        <TextView
            android:id="@+id/suhu2"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="20°"
            android:textSize="50dp"
            android:textColor="#FDE959"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/suhu1"/>
        <ImageView
            android:id="@+id/rain"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:src="@drawable/rain"
            android:layout_toRightOf="@+id/day"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="Cloudy"
            android:textSize="30dp"
            android:textColor="#141313"
            android:textAlignment="center"
            android:layout_below="@+id/rain"
            android:layout_toRightOf="@id/day"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="55dp"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3451CC">
        <TableRow
            android:background="#3F51B5"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_column="1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/cloud"/>
            <TextView
                android:layout_column="1"
                android:text="12.00"
                android:textSize="30dp"
                android:textColor="#FCF7F7"
                android:layout_marginTop="9dp"/>
        </TableRow>
        <TableRow
            android:background="#3F51B5"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_column="1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/cloud"/>
            <TextView
                android:layout_column="1"
                android:text="13.00"
                android:textSize="30dp"
                android:textColor="#FCF7F7"
                android:layout_marginTop="9dp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>